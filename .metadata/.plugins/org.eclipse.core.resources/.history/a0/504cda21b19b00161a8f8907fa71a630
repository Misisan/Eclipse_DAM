package inicio;

import java.util.Scanner;

public class syp_act03_02 {

	public static void main(String[] args) {
		//Variables
		Scanner lectorTecla = new Scanner(System.in);
		String num;
		Integer numint = null;
		boolean entero = false;
		
		//Recogemos la opción del usuario
		System.out.println("Miguel A. Simeón"+"\n"+"PROGRAMACIÓN DE SERVICIOS Y PROCESOS - 2º DAM SEMIPRESENCIAL"+"\n"+"\n"+"Actividad 03 - 02 - Días de la semana"+"\n");
		System.out.println("Dime el número de día:");
		num=lectorTecla.next();
		
		//Comprobamos que el número es entero y no letras
		while(entero==false){
			try{
				numint=Integer.valueOf(num);
				
				//Comprobamos si el número es positivo o negativo
				if(numint>0 && numint<8){
					entero=true;
					System.out.println("Día correcto");
				}else{
					System.out.println("Debes introducir un número de día entre 1 y 7:");
					num=lectorTecla.next();
				}
			}catch(Exception e){
				System.out.println("Debes introducir un número de día correcto:");
				num=lectorTecla.next();
			}
		}
		
		switch(numint){
			case 1:
				System.out.println("El día nº "+numint+" es el Lunes.");
				break;
			case 2:
				System.out.println("El día nº "+numint+" es el Martes.");
				break;
			case 3:
				System.out.println("El día nº "+numint+" es el Miércoles.");
				break;
			case 4:
				System.out.println("El día nº "+numint+" es el Jueves.");
				break;
			case 5:
				System.out.println("El día nº "+numint+" es el Viernes.");
				break;
			case 6:
				System.out.println("El día nº "+numint+" es el Sábado.");
				break;
			case 7:
				System.out.println("El día nº "+numint+" es el Domingo.");
				break;
			default:
				
		}

	}

}
